<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Action planifiée : Envoi quotidien emails parrainage -->
        <record id="ir_cron_send_referral_emails" model="ir.cron">
            <field name="name">Parrainage : Envoi emails quotidiens (200/jour)</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_referral_emails()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).replace(hour=19, minute=45, second=0)"/>
            <field name="priority">5</field>
        </record>

        <!-- Séquence pour les numéros de parrainage -->
        <record id="seq_referral_tracking" model="ir.sequence">
            <field name="name">Numérotation Parrainages</field>
            <field name="code">referral.tracking</field>
            <field name="prefix">PARRAIN-</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
        </record>
    </data>
</odoo>
